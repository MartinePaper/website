<!DOCTYPE html>
<html lang="en">

  <head>
{{{headHtml}}}
  </head>

  <body>

    <div id="main" class="container">
      <div id="header-container">
        {{{headerHtml}}}
      </div>

      <div class="row-fluid horizontal-margin page-title">
        <div class="span12">
          <h2>Collections</h2>
        </div>
      </div>


      <div id="collections" class="row-fluid">
        <div class="span12">
          {{#each rows}}
          <div class="row-fluid collections-row">
            <div class="span10 offset1">
              {{#each invitations}}
              <div class="collections-item">
                <a href="/collections/{{name}}">
                  <img src="/images/collections/{{name}}_preview.png" alt="">
                  <span class="collections-caption">{{nameUpperCase}}</span>
                </a>
              </div>
              {{/each}}
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>


    <script src="/javascripts/jquery-1.8.1.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>

  </body>
</html>
